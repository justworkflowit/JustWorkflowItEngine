    "prepare": "npm run build",
    "generate-types": "ts-node ./bin/generate-schemas.js && ts-node ./bin/generate-types.js"
  },
  "files": [
    "dist",
    "dist/js/src/workflowDefinition/jsonSchema"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nkorai/JustWorkflowItEngine.git"
  },
