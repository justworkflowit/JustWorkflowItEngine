    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "process": "^0.11.10",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.2",
