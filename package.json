  "description": "The JustWorkflowIt Engine",
  "main": "dist/js/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/js/src/index.js",
    "require": "./dist/js/src/index.cjs",
    "browser": "./dist/js/src/browser.js"
  },
  "scripts": {
    "test": "jest",
    "lint": "npx eslint . --ext .ts --fix && prettier --write \"**/*.*\" --config .prettierrc.json",
