{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist/js",
    "declarationDir": "dist/types",
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["es6"],
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "plugins", "public"]
}
