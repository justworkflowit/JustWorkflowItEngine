{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist/js",
    "declarationDir": "dist/types",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src", "global.d.ts", "bin"],
  "exclude": ["node_modules", "plugins", "public"]
}
